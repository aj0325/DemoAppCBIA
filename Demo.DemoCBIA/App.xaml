<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Demo.DemoCBIA"
             xmlns:os="clr-namespace:Xamarin.Essentials;assembly=Xamarin.Essentials"
             x:Class= "Demo.DemoCBIA.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
            <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
        </ResourceDictionary>
    </Application.Resources>
    <Application.RequestedTheme>
        <OnPlatform x:TypeArguments="os:OSAppTheme">
            <On Platform="iOS" Value="Light" />
            <On Platform="Android" Value="Light" />
            <!-- Add other platforms if needed -->
        </OnPlatform>
    </Application.RequestedTheme>
</Application>
